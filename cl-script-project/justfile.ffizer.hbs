@list:
    just --list

install-deps:
    peru sync
    ocicl install
    ./scripts/clean-systems

update-deps:
    peru reup
    ocicl latest
    ./scripts/clean-systems

ocicl-add-deps:
    ./scripts/ocicl-add-deps

@build: clean
    -rm ./{{ project }}
    ./scripts/build

@clean:
    -rm ./{{ project }}
    -rm -rf ./build/release/src/
    -rm -rf ./build/release/cli/

@clean-all:
    -rm ./{{ project }}
    -rm -rf ./build/

test:
    ./scripts/test
