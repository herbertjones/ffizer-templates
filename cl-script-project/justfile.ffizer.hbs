list:
    just --list

install-deps:
    peru sync
    ocicl install
    ./scripts/clean-systems

update-deps:
    peru reup
    ocicl latest
    ./scripts/clean-systems

build: clean
    -rm ./{{ project }}
    ./scripts/build

clean:
    -rm ./{{ project }}
    -rm -rf ./build/src/
    -rm -rf ./build/cli/

clean-all:
    -rm ./{{ project }}
    -rm -rf ./build/

test:
    ./scripts/test
